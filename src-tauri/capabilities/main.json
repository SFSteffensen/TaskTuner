{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "store:allow-get",
    "store:allow-set",
    "fs:default",
    "fs:allow-remove",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-app-write",
    "fs:allow-exists",
    "dialog:allow-message",
    "store:allow-save",
    "store:allow-load",
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "name": "open",
          "cmd": "open",
          "args": [
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    },
    "notification:default",
    "dialog:allow-save"
  ]
}
